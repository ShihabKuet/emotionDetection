<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/camera_main_layout"
    android:background="@drawable/gradient_deep_blue"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Face Detecting.........."
        android:layout_marginTop="50dp"
        android:fontFamily="@font/agencyfb_bold"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white">

    </TextView>

    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        android:id="@+id/frame_Surface"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_emotion"
        android:layout_marginTop="20dp"
        android:text="Result"
        android:textSize="40dp"
        android:textColor="#070FC5"
        android:layout_below="@+id/frame_Surface"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/agencyfb_bold">
    </TextView>

</RelativeLayout>